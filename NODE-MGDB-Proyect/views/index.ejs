<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUD Básico</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>

<div class="container mt-5">
    <h1>Usuarios</h1>
    <hr>
    <div class="d-flex justify-content-between align-items-center">
        <h3>Lista de Usuarios</h3>
        <a href="/create" class="btn btn-success">+ Crear Usuario</a>
    </div>
    <!-- Lista de Usuarios -->
    <ul class="list-group mt-3">
        <% users.forEach(user => { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <strong><%= user.name %></strong> - <%= user.email %> - <%= user.age %> años
                </div>
                <div>
                    <a href="/edit/<%= user._id %>" class="btn btn-warning btn-sm">Editar</a>
                    <a href="/delete/<%= user._id %>" class="btn btn-danger btn-sm">Eliminar</a>
                </div>
            </li>
        <% }) %>
    </ul>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>
