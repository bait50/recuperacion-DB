<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Productos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>

<div class="container mt-5">
    <h1>Lista de Productos</h1>
    <a href="/post/create" class="btn btn-primary mb-3">Crear Nuevo Producto</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Producto</th>
                <th>Stock</th>
                <th>Precio</th>
                <th>Estado</th>
                <th>Valor Total</th>
                <th>IdCategor√≠a</th>
                <th>Categoria</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% productos.forEach(producto => { %>
                <tr>
                    <td><%= producto.idprod %></td>
                    <td><%= producto.nombre %></td>
                    <td><%= producto.stock %></td>
                    <td><%= producto.precio %></td>
                    <td><%= producto.estado %></td>
                    <td><%= producto.valor %></td>
                    <td><%= producto.idcat %></td>
                    <td><%= producto.categoria %></td>
                    <td>
                        <a href="/post/edit/<%= producto.idprod %>" class="btn btn-warning btn-sm">Editar</a>
                        <form action="/post/delete/<%= producto.idprod %>" method="GET" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>
